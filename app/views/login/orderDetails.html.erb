<div class="container">
	
	<div class="offset5"><p class="title"><h4>Order Summary</h4></p><p class="offset4"><i>Logged in as : </i><b><%= session[:userid] %></b>&nbsp;&nbsp;&nbsp;<%= link_to 'Logout',:action=>'login' %></p></div></br></br>

		
	<%= form_tag :action =>'addToCart'  do %>
		<div class="row">
			<table id="orders">
				<thead>
					<tr>
						<th class="span4 offset4">Product ID</th>
						<th class="span4 offset4">Qty</th>
						<th class="span4 offset4">Price</th>
					</tr>
				</thead>
				<tbody>
					<% sum = 0 %>
        			<% @cartItems.each do |item| %> 
				        <tr>
				             <td class="span4 offset4">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= item.ProductID%></td> 
				             <td class="span4 offset4">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= item.Quantity%></td>
				             <td class="span4 offset4">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				             	<%= item.Price %></td>
				             	<% sum = sum + item.Price.to_i * item.Quantity.to_i %>
				             
						</tr> 
        			<%end%>
 				</tbody>
			</table><br>
		<div class="row">
			<div class="span3 offset9">
				<table>
					<tr>
						<td><b>Total Price:</b></td>
						<td>&nbsp;<b>$<%= sum %></b></td>
					</tr>
				</table>
			</div>
		</div><br>
		<div class="row">
			<div class="span12 offset1">
				<table>
					<tr>
						<td><i>Your order has been delivered successfully to the below shipping address.</i></td>
					</tr>
					<tr>
						<td><br><%=text_area_tag 'Address', @address %></td>
					</tr>
				</table>
			</div>
		</div>
						<br><br>
		<div class="row">
			<div class="span3 offset5" style="width:100px;"><%= submit_tag "Continue Shopping" %></div>
		</div>
		</div>
	<% end %>
	
</div>